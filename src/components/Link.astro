---
import cntl from "cntl";

interface LinkProps {
  label?: string;
  url: string;
  extendClass?: string;
  openInNewTab: boolean;
}

const {
  label,
  url,
  extendClass,
  openInNewTab = false,
} = Astro.props as LinkProps;

const text = label ? label : url;

const linkClasses = cntl`
  underline
  text-spectra-700
  dark:text-spectra-200
  ${label ? "break-word" : "break-all"}
  overflow-clip
  text-ellipsis
  ${extendClass}
`;
---

<a
  class={linkClasses}
  href={url}
  target={openInNewTab ? "_blank" : "_self"}
  rel="noopener noreferrer">{text}</a
>
